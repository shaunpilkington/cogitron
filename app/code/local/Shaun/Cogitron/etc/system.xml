<config>
    <sections>
        <cogitron translate="label" module="cogitron">
            <label>Cogitron</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>990</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Cogitron Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cogitron_dashsales translate="label,comment">
                            <label>Set the number of months data to display in the Sales area of the Dashboard.</label>
                            <comment><![CDATA[This number includes the headline figure. So 5 gives you this and the past 4 months.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cogitron_dashsales>
                        <cogitron_stockorange translate="label,comment">
                            <label>Set the number at which stock alerts will display ORANGE.</label>
                            <comment><![CDATA[For sanity, set this number higher than that used for RED warnings below]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cogitron_stockorange>
                        <cogitron_stockred translate="label,comment">
                            <label>Set the number at which stock alerts will display RED.</label>
                            <comment><![CDATA[For sanity, set this number lower than that used for ORANGE warnings above]]></comment> <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cogitron_stockred>
                        <cogitron_mostunits translate="label,comment">
                            <label>Set the number of 'most units ordered' product entries to display on the dashboard.</label>
                            <comment><![CDATA[]]></comment> <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cogitron_mostunits>
                        <cogitron_mostfreq translate="label,comment">
                            <label>Set the number of 'most frequently ordered' product entries to display on the dashboard</label>
                            <comment><![CDATA[]]></comment> <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cogitron_mostfreq>
                    </fields>
                </settings>


            </groups>
        </cogitron>
    </sections>
</config>
